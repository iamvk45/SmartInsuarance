    ViewBag.Title = "License Configuration";
    Layout = "~/Views/Shared/_Layout_new.cshtml";

    //var userSession = (UserModelSession)Session["UserDetails"];
    var insuarances = (List<Insuarance>)ViewBag.insuarances;


    //var username = "";
