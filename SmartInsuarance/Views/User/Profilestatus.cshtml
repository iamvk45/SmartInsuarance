@using SmartInsuarance.Models;
@{
    ViewBag.Title = "Profile Status";
    Layout = "~/Views/Shared/_Layout_new.cshtml";

    var userSession = (UserModelSession)Session["UserDetails"];
    var username = "";
    var usertype = "";
    var userID = "";
    if (userSession != null)
    {
        username = userSession.Name;
        usertype = userSession.Usertype;
        userID = userSession.sUSRCode;
    }


    var childsList = ViewBag.childData as List<ChildUsers>;

}
<link href="~/Content/Template/select2/css/select2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.css" />
@*<link href="~/Content/CountrySelect/build/css/countrySelect.css" rel="stylesheet" />
    <link href="~/Content/CountrySelect/build/css/demo.css" rel="stylesheet" />*@

<style type="text/css">
    th {
        color: #0a7bbc;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Member Details</h4>
            </div>
            <div class="card-body">
                <table class="table table-borderless" style="width:80%">
                    <tr style="display: flex;align-items: baseline;"><th>@username</th><td>-</td><td><a href="@Url.Action("AddUserMember", "User", new {type="User",parentID=userID})" class="btn btn-sm"><i class="fa fa-pencil"></i>  Edit</a></td></tr>

                    @{
                        if (childsList != null)
                        {
                            foreach (var item in childsList)
                            {
                                <tr style="display: flex;align-items: baseline;"><th>@item.Name</th><td>-</td><td><a href="@Url.Action("AddUserMember", "User", new {type="User",parentID=item.sUSRCode})" class="btn btn-sm"><i class="fa fa-pencil"></i>  Edit</a></td></tr>
                            }
                        }
                    }
                    <tr style="display: flex;align-items: baseline;"><td><a href="@Url.Action("AddUserMember", "User", new {type="Member",parentID=userID})" class="btn btn-sm btn-outline-primary"><i class="fa fa-plus"></i>  Add New Member</a></td></tr>
                </table>
            </div>
            <div class="card-footer" style="text-align: end;">
                <button class="btn btn-success">Continue to configuration</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.min.js"></script>