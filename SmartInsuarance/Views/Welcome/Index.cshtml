@using SmartInsuarance.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_new.cshtml";

    var userSession = (UserModelSession)Session["UserDetails"];
    var username = "";
    var usertype = "";
    if (userSession != null)
    {
        username = userSession.Name;
        usertype = userSession.Usertype;
    }

}
<link href="~/Content/Template/select2/css/select2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.css" />
@*<link href="~/Content/CountrySelect/build/css/countrySelect.css" rel="stylesheet" />
    <link href="~/Content/CountrySelect/build/css/demo.css" rel="stylesheet" />*@

<style type="text/css">
    #spnusertype::before {
        content: '('
    }

    #spnusertype::after {
        content: ')'
    }

    h4.card-title {
        padding: 4px;
        border-bottom: 1px solid #0a7bbc;
        width: 30%;
        border-bottom-width: 10px;
        border-radius: 16px
    }

    #pdisclaimer {
        color: red
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Welcome,<span id="spnusername" style="color: #0a7bbc;">@username</span><span id="spnusertype" style="font-size: 16px;color: seagreen;">@usertype</span></h4>
            </div>
            <div class="card-body">
                <h6>Welcome to smart ensure,enjoy your trial period</h6>
                <p id="pdisclaimer">Disclaimer: If verification is not completed you can't get access to the system</p>
            </div>
            <div class="card-footer" style="text-align: end;">
                <a href="@Url.Action("Profilestatus","User")"  class="btn btn-success">Continue to configuration</a>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.min.js"></script>
